<h1><%= @doctor.name %></h1>
<h2>Department: <%= @doctor.department %></h2>
<h3>Appointments</h3>
<ul>
<% @doctor.appointments.each do |app| %>
    <%= link_to app.patient.name, patient_path(app.patient) %> -
    <%= link_to app.appointment_datetime.strftime("%B %d, %Y at %k:%M"), patient_path(app) %><br>
    <br>

<% end %>
</ul>

